{
  "builders": [
    {
      "boot_command": "",
      "boot_wait": "6m",
      "communicator": "winrm",
      "cpus": 8,
      "cores": 2,
      "disk_adapter_type": "lsisas1068",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "{{user `disk_type_id`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./floppy/WindowsPowershell.lnk",
        "./floppy/PinTo10.exe",
        "./scripts/fixnetwork.ps1",
        "./scripts/disable-screensaver.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/pswindowsupdates.ps1",
        "./scripts/docker/disable-windows-defender.ps1",
        "./scripts/install-devtools.ps1"
      ],
      "guest_os_type": "windows9-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": 16384,
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "type": "vmware-iso",
      "version": 14,
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900"
      },
      "vmx_remove_ethernet_interfaces": true,
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant",
      "output_directory" : "windows-10-{{user `windows10_edition`}}"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "windows_10_{{user `windows10_edition`}}_{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "vagrantfile-windows_10.template"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "./scripts/set-powerplan.ps1",
        "./scripts/docker/disable-windows-defender.ps1"
      ],
      "type": "powershell"
    },

    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/enable-rdp.bat"
      ],
      "type": "windows-shell"
    },
    {
      "type": "windows-restart"
    },

    {
      "inline": [
        "a:\\disable-windows-defender.ps1",
        "a:\\install-devtools.ps1 -LightTools"
      ],
      "environment_vars": ["ChocolateyUrl='***REMOVED***'"],
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "type": "windows-restart"
    },


    {
      "inline": [
        "a:\\disable-windows-defender.ps1",
        "a:\\install-devtools.ps1 -LightTools"
      ],
      "environment_vars": ["ChocolateyUrl='***REMOVED***'"],
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },

    {
      "inline": [
        "a:\\disable-windows-defender.ps1",
        "a:\\install-devtools.ps1 -VsBuildTools"
      ],
      "environment_vars": ["ChocolateyUrl='***REMOVED***'"],
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },

    {
      "inline": [
        "a:\\disable-windows-defender.ps1",
        "a:\\install-devtools.ps1 -VisualStudioLegacy"
      ],
      "environment_vars": ["ChocolateyUrl='***REMOVED***'"],
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart",
      "restart_check_command": "powershell -command \"& {Write-Output 'restarted.'}\""
    },

    {
      "inline": [
        "a:\\disable-windows-defender.ps1",
        "a:\\install-devtools.ps1 -SqlServer"
      ],
      "environment_vars": ["ChocolateyUrl='***REMOVED***'"],
      "type": "powershell",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart",
      "restart_check_command": "powershell -command \"& {Write-Output 'restarted.'}\""
    },

    {
      "scripts": [
        "./scripts/docker/disable-windows-defender.ps1"
      ],
      "type": "powershell"
    },
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "./scripts/pin-powershell.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/set-winrm-automatic.bat",
        "./scripts/uac-enable.bat",
        "./scripts/compact.bat"
      ],
      "type": "windows-shell"
    }
  ],
  "variables": {
    "autounattend": "./answer_files/10_{{user `windows10_edition`}}/Autounattend.xml",
    "disk_size": "100000",
    "disk_type_id": "1",
    "headless": "false",
    "iso_checksum": "checksum",
    "iso_checksum_type": "sha256",
    "iso_url": "/path/to/iso",
    "restart_timeout": "5m",
    "vhv_enable": "false",
    "winrm_timeout": "6h",
    "vm_name":"windows-10-{{user `windows10_edition`}}",
    "virtio_win_iso": "~/virtio-win.iso",
    "windows10_edition":"pro"
  }
}

